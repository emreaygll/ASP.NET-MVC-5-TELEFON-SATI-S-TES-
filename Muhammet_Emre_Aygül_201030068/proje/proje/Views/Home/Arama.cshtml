@using proje.Entity
@model IEnumerable<Urun>
@{
    ViewBag.Title = "Arama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    
      

    </div>
    <div class="span9">
        <!--
        New Products
        -->

        <h3><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bizim ürünlerimiz</font></font></h3>

        <ul class="thumbnails">
            @foreach (var item in Model)
            {
                <li class="span3">
                    <div class="thumbnail">
                        >
                        <a href="/Home/UrunDetay/@item.id"><img src="~/Content/image/@item.image" style="max-width:207px;max-height:267px; min-width:207px;min-height:267px;" alt=""></a>
                        <div class="caption cntr">
                            <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.İsim</font></font></p>
                            <p><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Fiyat</font></font></strong></p>
                            <h4><a class="shopBtn" href="/Home/UrunDetay/@item.id" title="Sepete ekle"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Görüntüle</font></font></a></h4>

                            <br class="clr">
                        </div>
                    </div>
                </li>
            }


        </ul>

    </div>


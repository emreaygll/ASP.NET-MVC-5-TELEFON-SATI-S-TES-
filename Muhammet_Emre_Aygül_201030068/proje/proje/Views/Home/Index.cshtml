@using proje.Entity
@model IEnumerable<Urun>
<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_KategoriList","Kategori")
            </ul>
        </div>

       
       @Html.Action("_FeaturedUrunList","Home")

    </div>
    <div class="span9">
        <div class="well np">
          @Html.Action("Slider","Home")
        </div>
        
       
            <h3>Ürünler </h3>
            <hr class="soften" />
          
           
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                        <li class="span3">
                            <div class="thumbnail">

                               
                                <a href="/Home/UrunDetay/@item.id"><img src="~/Content/image/@item.image" style="max-width:207px;max-height:267px; min-width:207px;min-height:267px;" alt=""></a>
                                <div class="caption cntr">
                                    <p>@item.İsim</p>
                                    <p><strong>@item.Fiyat ₺</strong></p>
                                    <h4><a class="shopBtn" href="/Home/UrunDetay/@item.id" title="add to cart"> Görüntüle </a></h4>
                                   
                                    <br class="clr">
                                </div>
                            </div>
                        </li>
                    }


                </ul>
       
     

        
    </div>
</div>
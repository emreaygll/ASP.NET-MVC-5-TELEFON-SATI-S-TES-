@model proje.Entity.Kategori

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <h3>Kategoriyi Silmek istediğinizi eminmisiniz</h3>
    <div>
        <h4>Kategori Silme</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.İsim)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Acıklama)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">

        <input onclick="myFunction()" type="submit" value="Sil" class="btn btn-danger" /> |
        <script>
            function myFunction() {
                confirm("Kategoriyi Silmek istediğinizi eminmisiniz");
            }
        </script>
        @Html.ActionLink("Kategori Listesi", "Index", null, new { @class = "btn btn-warning" })
    </div>
        }
    </div>
    </section>
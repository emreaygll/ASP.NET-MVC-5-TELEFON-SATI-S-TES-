@model proje.Entity.Urun

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <h3>Ürünü Silmek İstediğinizden Eminmisiniz?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">


            <dt>
                Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.İsim)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Acıklama)
            </dd>

            <dt>
                Resim
            </dt>

            <dd>
                @Html.DisplayFor(model => model.image)
                <img src="~/Content/image/@Model.image" width="50" height="40" />
            </dd>

            <dt>
                Fiyat
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fiyat)
            </dd>

            <dt>
                Adet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Stok)
            </dd>

            <dt>
                Slayt
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Slider)
            </dd>

            <dt>
                Anasayfa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsHome)
            </dd>

            <dt>
                Popüler
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsFeatured)
            </dd>

            <dt>
                Onaylı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsApproved)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">

        <input onclick="myFunction()" type="submit" value="Sil" class="btn btn-danger" />
         <script>
            function myFunction() {
                confirm("Kategoriyi Silmek istediğinizi eminmisiniz");
            }
        </script>
        @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-warning" })
    </div>
        }
    </div>
    </section>